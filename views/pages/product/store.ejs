<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <ul class="breadcrumb-tree">
                    <li><a href="/">Trang chủ</a></li>
                    <% if (category != '') { %><li><a href="/store?category=<%= category %>"><%= category %></a></li><% } %>
                    <% if (producer != '') { %><li><a href="/store?producer=<%= producer %>"><%= producer %></a></li><% } %>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<!-- SECTION -->
<div class="section">
    <div class="container">
        <div class="row">
            <!-- ASIDE -->
            <div id="aside" class="col-md-3">
                <form action="/store" method="POST">
                    <!-- Left Widget -->
                    <div class="aside">
                        <h3 class="aside-title">Danh mục</h3>
                        <div class="checkbox-filter">
                            <div class="input-radio">
                                <input type="radio" id="category-0" name="category" value="" checked>
                                <label for="category-0">
                                    <span></span>
                                    Tất cả
                                </label>
                            </div>
                        
                            <div class="input-radio">
                                <input type="radio" id="category-1" name="category" value="Bàn%20phím"
                                    <% if (category == "Bàn phím") { %> checked <% } %>>
                                <label for="category-1">
                                    <span></span>
                                    Bàn phím
                                </label>
                            </div>
                
                            <div class="input-radio">
                                <input type="radio" id="category-2" name="category" value="Chuột"
                                    <% if (category == "Chuột") { %> checked <% } %>>
                                <label for="category-2">
                                    <span></span>
                                    Chuột
                                </label>
                            </div>
                
                            <div class="input-radio">
                                <input type="radio" id="category-3" name="category" value="Loa"
                                    <% if (category == "Loa") { %> checked <% } %>>
                                <label for="category-3">
                                    <span></span>
                                    Loa
                                </label>
                            </div>
                
                            <div class="input-radio">
                                <input type="radio" id="category-4" name="category" value="Tai%20nghe"
                                    <% if (category == "Tai nghe") { %> checked <% } %>>
                                <label for="category-4">
                                    <span></span>
                                    Tai nghe
                                </label>
                            </div>
                        </div>
                    </div>
                    <!-- /aside Widget -->
                
                    <!-- aside Widget -->
                    <div class="aside">
                        <h3 class="aside-title">Giá</h3>
                        <div class="price-filter">
                            <div class="input-number price-min">
                                <p>Thấp nhất</p>
                                <input type="number" name="min" value="<%= min %>" min="0">
                            </div>
                            <span>-</span>
                            <div class="input-number price-min">
                                <p>Cao nhất</p>
                                <input type="number" name="max" value="<%= max %>" min="1">
                            </div>
                        </div>
                    </div>
                    <!-- /aside Widget -->
                
                    <!-- aside Widget -->
                    <div class="aside">
                        <h3 class="aside-title">Nhà sản xuất</h3>
                        <div class="checkbox-filter">
                            <div class="input-radio">
                                <input type="radio" id="brand-0" name="producer" value="" checked>
                                <label for="brand-0">
                                    <span></span>
                                    Tất cả
                                </label>
                            </div>
                
                            <div class="input-radio">
                                <input type="radio" id="brand-1" name="producer" value="Asus"
                                    <% if (producer == "Asus") { %> checked <% } %>>
                                <label for="brand-1">
                                    <span></span>
                                    Asus
                                </label>
                            </div>
                            <div class="input-radio">
                                <input type="radio" id="brand-2" name="producer" value="Fuhlen"
                                    <% if (producer == "Fuhlen") { %> checked <% } %>>
                                <label for="brand-2">
                                    <span></span>
                                    Fuhlen
                                </label>
                            </div>
                            <div class="input-radio">
                                <input type="radio" id="brand-3" name="producer" value="Logitech"
                                    <% if (producer == "Logitech") { %> checked <% } %>>
                                <label for="brand-3">
                                    <span></span>
                                    Logitech
                                </label>
                            </div>
                            <div class="input-radio">
                                <input type="radio" id="brand-4" name="producer" value="Sony"
                                    <% if (producer == "Sony") { %> checked <% } %>>
                                <label for="brand-4">
                                    <span></span>
                                    Sony
                                </label>
                            </div>
                            <div class="input-radio">
                                <input type="radio" id="brand-5" name="producer" value="Razer"
                                    <% if (producer == "Razer") { %> checked <% } %>>
                                <label for="brand-5">
                                    <span></span>
                                    Razer
                                </label>
                            </div>
                        </div>
                    </div>
                    <!-- /aside Widget -->
                    <br><br>
                    <button type="submit" class="btn btn-danger">Lọc sản phẩm</button>
                </form>
            </div>
            <!-- /ASIDE -->

            <!-- STORE -->
            <div id="store" class="col-md-9">
                <!-- store top filter -->
                <div class="store-filter clearfix">
                    <div class="store-sort">
                        <label>
                            <select class="input-select" onchange="location = this.value;">
                                <option value="?<%= filterStr %>" selected>Mới nhất</option>
                                <option value="?<%= filterStr %>sort=name-asc" <% if (sort == 'name-asc') { %> selected <% } %>>Tên (A -> Z)</option>
                                <option value="?<%= filterStr %>sort=name-des" <% if (sort == 'name-des') { %> selected <% } %>>Tên (Z -> A)</option>
                                <option value="?<%= filterStr %>sort=price-asc" <% if (sort == 'price-asc') { %> selected <% } %>>Giá (thấp -> cao)</option>
                                <option value="?<%= filterStr %>sort=price-des" <% if (sort == 'price-des') { %> selected <% } %>>Giá (cao -> thấp)</option>
                            </select>
                        </label>
                
                        <label>
                            Số sản phẩm mỗi trang:
                            <select class="input-select" onchange="location = this.value;">
                                <option value="?<%= filterStr %><%= sortStr %>count=12&page=1" <% if (count == 12) { %> selected <% } %>>12</option>
                                <option value="?<%= filterStr %><%= sortStr %>count=8&page=1" <% if (count == 8) { %> selected <% } %>>8</option>
                                <option value="?<%= filterStr %><%= sortStr %>count=4&page=1" <% if (count == 4) { %> selected <% } %>>4</option>
                            </select>
                        </label>
                    </div>
                </div> 
                <!-- /store top filter -->

                <!-- store products -->
                <div class="row">
                    <!-- Phần ô sản phẩm  -->
                    <div class="product-show">
                        <div class="row">
                            <% products.forEach((entry) => { %>
                            <div class="col-md-3 col-xs-6">
                                <div class="product product_store">
                                    <a href="/product/<%= entry._id %>">
                                        <div class="product-img">
                                            <img src="<%= entry.imgSrc %>" alt="">
                                            <div class="product-label">
                                                <!-- <span class="sale">-30%</span>
                                            <span class="new">MỚI</span> -->
                                            </div>
                                        </div>
                                    </a>
                                    <div class="product-body">
                                        <p class="product-category"><%= entry.category %></p>
                                        <h3 class="product-name"><a href="/product/<%= entry._id %>"><%= entry.name %></a></h3>
                                        <h4 class="product-price"><%= priceConverter(entry.price) %> đ <del
                                                class="product-old-price"><%= priceConverter(entry.old_price) %> đ</del>
                                        </h4>
                                    </div>
                                    <!-- <div class="add-to-cart">
                                        <button id="<%= entry._id %>_<%= entry.imgSrc %>_<%= entry.name %>_<%= entry.price %>" class="add-to-cart-btn" onclick="addToCart(this)">
                                            <i class="fa fa-shopping-cart"></i><p style="font-size:12px;">Thêm vào giỏ</p>
                                        </button>
                                    </div> -->
                                </div>
                            </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
                <!-- /store products -->

                <!-- store bottom filter -->
                <div class="store-filter clearfix">
                    <span class="store-qty">Đang xem <%= count %>/<%= countAll %> sản phẩm</span>
                    <ul class="store-pagination">
                        <% for (var i = 1; i <= countPages; i++) { %>
                        <li <% if (page == i) { %> class="active" <% } %>>
                            <a <% if (page != i) { %> href="?<%= filterStr %><%= sortStr %>count=<%= count %>&page=<%= i %>" <% } %> ><%= i %></a>
                        </li>
                        <% } %>
                    </ul>
                </div>
                <!-- /store bottom filter -->
            </div>
            <!-- /STORE -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->