<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <ul class="breadcrumb-tree">
                    <li><a href="/">Trang chủ</a></li>
                    <% if (category != '') { %><li><a href="/store?category=<%= category %>"><%= category %></a></li><% } %>
                    <% if (producer != '') { %><li><a href="/store?producer=<%= producer %>"><%= producer %></a></li><% } %>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<!-- SECTION -->
<div class="section">
    <div class="container">
        <div class="row">
            <!-- ASIDE -->
            <div id="aside" class="col-md-3">
                <%- include ("../../partials/left-filter") %>
            </div>
            <!-- /ASIDE -->

            <!-- STORE -->
            <div id="store" class="col-md-9">
                <!-- store top filter -->
                <%- include ("../../partials/top-filter") %>
                <!-- /store top filter -->

                <!-- store products -->
                <div class="row">
                    <!-- Phần ô sản phẩm  -->
                    <div class="product-show">
                        <div class="row">
                            <% products.forEach((entry) => { %>
                            <div class="col-md-3 col-xs-6">
                                <div class="product product_store">
                                    <a href="/product/<%= entry._id %>">
                                        <div class="product-img">
                                            <img src="<%= entry.imgSrc %>" alt="">
                                            <div class="product-label">
                                                <!-- <span class="sale">-30%</span>
                                            <span class="new">MỚI</span> -->
                                            </div>
                                        </div>
                                    </a>
                                    <div class="product-body">
                                        <p class="product-category"><%= entry.category %></p>
                                        <h3 class="product-name"><a href="/product/<%= entry._id %>"><%= entry.name %></a></h3>
                                        <h4 class="product-price"><%= priceConverter(entry.price) %> đ <del
                                                class="product-old-price"><%= priceConverter(entry.old_price) %> đ</del>
                                        </h4>
                                    </div>
                                    <!-- <div class="add-to-cart">
                                        <button id="<%= entry._id %>_<%= entry.imgSrc %>_<%= entry.name %>_<%= entry.price %>" class="add-to-cart-btn" onclick="addToCart(this)">
                                            <i class="fa fa-shopping-cart"></i><p style="font-size:12px;">Thêm vào giỏ</p>
                                        </button>
                                    </div> -->
                                </div>
                            </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
                <!-- /store products -->

                <!-- store bottom filter -->
                <%- include ("../../partials/bottom-filter") %>
                <!-- /store bottom filter -->
            </div>
            <!-- /STORE -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->